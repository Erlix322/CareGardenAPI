extends layout

block content
  div(class="jumbotron" style="max-width:500px;margin: 0 auto;")
    h1 Login Page
    p.lead welcome to CareGarden API
    br
    form(role='form', action="/api/login",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='application/json', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='application/json', name="password", placeholder='Password')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel